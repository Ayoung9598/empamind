# Example backend configuration for Terraform state
# Copy this to state-backend.tf and uncomment after creating the state bucket
# 
# Run these commands to initialize:
# 1. terraform apply -target=module.state (to create the state bucket first)
# 2. terraform init -migrate-state (to migrate local state to S3)

terraform {
  backend "s3" {
    bucket         = "your-empamind-terraform-state"  # Replace with your bucket name
    key            = "empamind/terraform.tfstate"
    region         = "us-east-1"
    encrypt        = true
    dynamodb_table = "empamind-terraform-state-lock"  # Replace with your table name
  }
}

